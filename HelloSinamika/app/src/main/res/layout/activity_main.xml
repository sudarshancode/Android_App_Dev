<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/corgi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মামু খাবার দেউ"
            android:textSize="40dp"
            android:textColor="#FF5722"
            android:fontFamily="@font/fancy_handwritting"
            />
    </LinearLayout>
    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#201F1F"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
       android:textColor="#292828"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        />
    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#201F1F"
        android:drawableStart="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:textColorHint="#2E2C2C"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@drawable/login_button_background"
        android:elevation="20dp"
        android:padding="7dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgetten Password?"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#191818"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/createNewAccountId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/create_account_background"
            android:backgroundTint="@null"
            android:layout_marginTop="10dp"
            android:text="Create New Account"
            android:textSize="25dp"
            android:padding="9dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            />
    </RelativeLayout>

</LinearLayout>